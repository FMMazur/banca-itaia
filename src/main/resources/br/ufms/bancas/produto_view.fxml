<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <FlowPane alignment="CENTER" prefHeight="62.0" style="-fx-background-color: #b1bb91;">
        <Label text="VISUALIZAÇÃO DE PRODUTOS">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
    </FlowPane>
    <TableView minHeight="200.0" prefHeight="600.0">
      <columns>
          <TableColumn prefWidth="62.0" text="Codigo" />
          <TableColumn prefWidth="49.0" text="Tipo" />
          <TableColumn prefWidth="68.0" text="Editora " />
          <TableColumn prefWidth="71.0" text="N° Edição" />
          <TableColumn prefWidth="84.0" text="Quantidade" />
          <TableColumn prefWidth="77.0" text="Fornecedor" />
          <TableColumn prefWidth="106.0" text="Preço de Compra" />
          <TableColumn prefWidth="83.0" text="Preço de Venda" />
      </columns>
    </TableView>
    <HBox alignment="CENTER_RIGHT" spacing="32.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <Button fx:id="add" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" prefHeight="38.0"
                prefWidth="100.0" stylesheets="@css/fullpackstyling.css" text="Cadastrar">
            <font>
                <Font size="15.0"/>
            </font>
        </Button>
        <Button fx:id="remove" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" prefHeight="38.0"
                prefWidth="100.0" stylesheets="@css/fullpackstyling.css" text="Remover">
            <font>
                <Font size="15.0"/>
            </font>
        </Button>
    </HBox>
</VBox>
