<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="br.ufms.bancas.controller.EstoqueController">
    <FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="62.0" style="-fx-background-color: #B1BB91;">
        <Label alignment="CENTER" text="ESTOQUE">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
    </FlowPane>
    <TableView fx:id="stock" maxHeight="1.7976931348623157E308" minHeight="200.0" prefHeight="600.0">
      <columns>
          <TableColumn prefWidth="64.0" text="Código" />
          <TableColumn prefWidth="67.0" text="Tipo" />
          <TableColumn prefWidth="108.0" text="Preço de venda" />
          <TableColumn prefWidth="108.0" text="Preço de Compra" />
          <TableColumn prefWidth="87.0" text="Fornecedor" />
          <TableColumn prefWidth="75.0" text="Quantidade" />
      </columns>
    </TableView>
    <HBox alignment="CENTER_RIGHT" spacing="32.0">
        <VBox.margin>
            <Insets />
        </VBox.margin>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Button fx:id="add" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="100.0" stylesheets="@css/fullpackstyling.css" text="Adicionar">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Button fx:id="remove" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="100.0" stylesheets="@css/fullpackstyling.css" text="Remover">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
    </HBox>
</VBox>
